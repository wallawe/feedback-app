<div class="stats">
  <section>
    <h3><%= @domain.url %></h3>
    <%= link_to "Edit", edit_domain_path(@domain) %> | <%= link_to "Delete", domain_path(@domain), method: :delete, confirm: "Are you sure?" %>
  </section>
  <section>
    <h3><%= @domain.comments.all.count %></h3>
    Total Submissions
  </section>
  <section>
    <h3><%= time_ago_in_words(@domain.created_at) %></h3>
    This survey has been active</dh1>
  </section>
</div>

<% if @domain.comments.count == 0 %>
  <h3 style="margin: 50px 0;">Nothing here quite yet</h3>
<% else %>
  <div class="table">
    <table>
      <tr>
        <td></td>
        <td>Submitted on</td>
        <td>Submitted from</td>
        <td>Email</td>
        <td><%= @domain.title %></td>
      </tr>
      <% comment_number = 0 %>
      <% @domain.comments.each do |comment| %>
        <% comment_number += 1 %>
        <tr>
          <td><%= comment_number %></td>
          <td><%= I18n.l comment.created_at, :format => :short %></td>
          <td><%= comment.url %></td>
          <td><%= field_display(comment) %></td>
          <td><%= comment.feedback %></td>
        </tr>
      <% end %>
    </table>
  </div>
<% end %>
