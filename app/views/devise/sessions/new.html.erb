<div class="form-container">
  <h2>Sign in </h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <%= f.label :email, :class => 'label' %>
    <%= f.email_field :email, autofocus: true, placeholder: "Email", required: true %>

    <%= f.label :password, :class => 'label' %>
    <%= f.password_field :password, placeholder: "Password", required: true %>

    <% if devise_mapping.rememberable? -%>
      <div><%= f.check_box :remember_me %> <%= f.label :remember_me, :class => 'label' %></div>
    <% end %>

    <%= f.submit "Sign in", :class => "button primary top-20 right-20" %>

  <% end %>

  <div class="subtext top-20">
    Don't have an account? <%= link_to 'Sign up here', new_user_registration_path %>
  </div>
</div>