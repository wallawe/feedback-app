<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <title>Builder</title>

    <link rel="stylesheet" href="http://code.jquery.com/ui/1.10.4/themes/smoothness/jquery-ui.css">
    <%= stylesheet_link_tag 'create_feedback', :media => 'all' %>
    <%= stylesheet_link_tag 'widget', :media => 'all' %>

    <script src="http://code.jquery.com/jquery-1.11.0.min.js" type="text/javascript"></script>
    <script src="http://code.jquery.com/ui/1.10.4/jquery-ui.js"></script>

  </head>
  <body>

    <div class="mock-page">
      <div class="settings">


        <h2>Styles</h2>

        <span>Background Color: </span><input class="bg-hex" type="text"><br>
        <span>Input field background color: </span><input class="field-color" type="text"><br>
        <span>Text Color: </span><input class="text-hex" type="text"><br>
        <p>
          <label for="amount">Container Border Radius:</label>
          <input type="text" class="container-radius" value="5px" style='border:none;'>
        </p>
        <div id="cRadius-range"></div>
        <p>
          <label for="amount">Form and Button Border Radius:</label>
          <input type="text" class="field-radius" value="0px" style='border:none;'>
        </p>
        <div id="fRadius-range"></div>
        <hr>


        <h2>Content</h2>

        <span>Headline text: </span><input class="headline-text" type="text"><br>
        <span>Email placeholder text: </span><input class="email-text" type="text"><br>
        <span>Body placeholder text: </span><input class="body-text" type="text"><br>
        <span>Button text: </span><input class="button-text" type="text"><br>


      </div>




      <div class="feedback-container">
        <p class="action-call">Help us understand WTF we're doing</p>
          <span class="plus action-call">+</span>
          <span class="minus action-call" style="display: none;">â€“</span>
        <form
        action="http://localhost:7000/domains/5/comments"
        id="a_feedback_form"
        class="feedback-form"
        method="post"
        style="display: none;">
          <input id="domain_id" name="comment[domain_id]" type="hidden" value="5">
          <input
          id="comment_url"
          name="comment[url]"
          type="hidden"
          placeholder="current website">
          <input
          id="feedback_email"
          name="comment[email]"
          type="text"
          placeholder="email (optional)"
          class="interactive">
          <textarea
          id="feedback_text"
          class="interactive"
          name="comment[feedback]"
          rows="4"
          type="text"
          placeholder="your words of wisdom"></textarea>
          <input name="commit" type="submit" value="send" class="interactive submit-button">
        </form>
      </div>

    </div>


    <%= javascript_include_tag 'widget' %>
    <%= javascript_include_tag 'create_feedback' %>

  </body>

</html>