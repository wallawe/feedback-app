<script type="text/javascript">

window.onload = function(){

//only show form if cookie isn't set. set cookie value as domain.id


var domainId = $('#feedback_form_839224').data('form-id');

function createCookie(name, value, days) {
  var expires;
  if (days) {
    var date = new Date();
    date.setTime(date.getTime() + (days * 24 * 60 * 60 * 1000));
    expires = "; expires=" + date.toGMTString();
  } else {
    expires = "";
  }
  document.cookie = escape(name) + "=" + escape(value) + expires + "; path=/";
}

var currentUrl = window.location.href;
$('#comment_url').val(currentUrl);

var fb_form = $('#feedback_form_839224');

$(document).on('click', '.action-call', function(){
  fb_form.slideToggle(100);
});

fb_form.submit(function(ev) {
  $.ajax({
    type: fb_form.attr('method'),
    url: fb_form.attr('action'),
    data: fb_form.serialize(),
    success: function() {
      createCookie("fbWidget", domainId, 30);
      //set cookie
      alert('cool, this worked');
      $('.feedback-container').hide();
    },
    error: function() {
      alert('ALERT! ERROR');
    }
  });
  ev.preventDefault();
});


}
</script>