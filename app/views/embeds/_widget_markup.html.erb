<div class="feedback-container <%= @domain.tint %>">
  <p class="action-call"><%= @domain.title %></p>
  <span class="minus action-call">–</span>
  <form
    id="feedback_form_839224"
    method="post"
    action="http://localhost:7000/domains/<%= @domain.id%>/comments"
    name="a_feedback_form"
    class="<%= initial_display(@domain.display) %>">
    <input
      id="domain_id"
      name="comment[domain_id]"
      type="hidden"
      value="<%= @domain.id %>">
    <input
      id="comment_url"
      name="comment[url]"
      type="hidden">

  <% if @domain.content_type == "mult-choice" %>

    <input type="radio" id="question_1" name="comment[feedback]" value="<%= @domain.question_1 %>">
    <label for="question_1"><%= @domain.question_1 %></label>
    <input type="radio" id="question_2" name="comment[feedback]" value="<%= @domain.question_2 %>">
    <label for="question_2"><%= @domain.question_2 %></label>
    <% unless @domain.question_3.blank? %>
      <input type="radio" id="question_3" name="comment[feedback]" value="<%= @domain.question_3 %>">
      <label for="question_3"><%= @domain.question_3 %></label>
    <% end %>
    <% unless @domain.question_4.blank? %>
      <input type="radio" id="question_4" name="comment[feedback]" value="<%= @domain.question_4 %>">
      <label for="question_4"><%= @domain.question_4 %></label>
    <% end %>

  <% else %>

    <input
      class="interactive"
      id="feedback_email"
      name="comment[email]"
      placeholder="<%= @domain.field_1 %>"
      type="text">
    <textarea
      class="interactive"
      id="feedback_text"
      name="comment[feedback]"
      placeholder="<%= @domain.field_2%>"
      rows="4" required></textarea>

  <% end %>

    <input
      class="interactive submit-button"
      name="commit"
      type="submit"
      value="Submit">

  </form>
</div>

